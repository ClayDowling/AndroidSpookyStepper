<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rxnctrllabs.androidledblink.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/availableGpioText"
        android:text="GPIO Ports"/>

    <TextView
        android:text="PWM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/availablePwmText"
        android:layout_below="@+id/availableGpioText"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="UART"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/availablePwmText"
        android:layout_alignParentStart="true"
        android:id="@+id/availableUartText"/>

    <TextView
        android:text="I2C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/availableUartText"
        android:layout_alignParentStart="true"
        android:id="@+id/availableI2CText"/>
</RelativeLayout>
